<div class="reseller-form">
  <style>
    .reseller-form {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .reseller-form__title {
      color: #FF6600;
      text-align: center;
      margin-bottom: 10px;
      font-size: 24px;
    }
    
    .reseller-form__subtitle {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }
    
    .reseller-form__input-wrapper {
      margin-bottom: 20px;
      position: relative;
    }

    
    .reseller-form__required {
      color: #FF6600;
      margin-right: 5px;
    }
    
    .reseller-form__input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }
    
    .reseller-form__input:focus {
      outline: none;
      border-color: #FF6600;
    }
    
    .reseller-form__checkbox-group {
      margin-top: 5px;
    }
    
    .reseller-form__checkbox-label {
      display: block;
      margin-bottom: 10px;
      cursor: pointer;
    }
    
    .reseller-form__checkbox {
      margin-right: 10px;
    }
    
    .reseller-form__submit {
      background-color: #FF6600;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      cursor: pointer;
      width: 100%;
      margin-top: 20px;
      transition: background-color 0.3s ease;
    }
    
    .reseller-form__submit:hover {
      background-color: #e65c00;
    }
    
    .reseller-form__submit:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    
    .reseller-form__error {
      color: red;
      font-size: 14px;
      margin-top: 5px;
      display: none;
    }
    
    .reseller-form__success {
      color: green;
      text-align: center;
      margin-top: 20px;
      display: none;
    }
  </style>

  <div class="reseller-form__container">
    <h1 class="reseller-form__title">Formulário de Revendedor</h1>
    <p class="reseller-form__subtitle">Preencher dados abaixo</p>
  
    {% form 'create_customer' %}
      {% if form.errors %}
        <div class="reseller-form__error" style="display: block;">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}
      
      {% if form.posted_successfully? %}
        <div class="reseller-form__success" style="display: block;">
          <p>Formulário enviado com sucesso!</p>
          <p>Receberá um email de confirmação nos próximos minutos. A sua conta será verificada em até 48 horas.</p>
        </div>
      {% endif %}
      
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_first_name">*Nome</label>
        <input type="text" class="reseller-form__input" id="customer_first_name" name="customer[first_name]" placeholder="*Nome" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_last_name">*Apelido</label>
        <input type="text" class="reseller-form__input" id="customer_last_name" name="customer[last_name]" placeholder="*Apelido" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_company">*Empresa</label>
        <input type="text" class="reseller-form__input" id="customer_company" name="customer[addresses][0][company]" placeholder="*Empresa" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_nif">*Número de Identificação Fiscal</label>
        <input type="text" class="reseller-form__input" id="customer_nif" name="customer[nif]" placeholder="*Número de Identificação Fiscal" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_city">*Localidade</label>
        <input type="text" class="reseller-form__input" id="customer_city" name="customer[addresses][0][city]" placeholder="*Localidade" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_email">*Email</label>
        <input type="email" class="reseller-form__input" id="customer_email" name="customer[email]" placeholder="*Email" required>
      </div>
      
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="customer_password">*Senha</label>
        <input type="password" class="reseller-form__input" id="customer_password" name="customer[password]" placeholder="*Senha" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label">*Actividade da sua Empresa</label>
        <div class="reseller-form__checkbox-group">
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="customer[tags][]" value="actividade_centro_auto">
            Centro Auto
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="customer[tags][]" value="actividade_posto_de_abastecimento">
            Posto de Abastecimento
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="customer[tags][]" value="actividade_casa_de_pecas_e_acessorios">
            Casa de Peças e Acessórios
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="customer[tags][]" value="actividade_centro_de_lavagem">
            Centro de Lavagem
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="customer[tags][]" value="actividade_outros">
            Outros
          </label>
        </div>
      </div>
      
      <input type="hidden" name="customer[note]" id="customer_note">
      <input type="hidden" name="customer[addresses][0][country]" value="Portugal">
      <input type="hidden" name="customer[tags][]" value="pending_approval">
      
      <button type="submit" class="reseller-form__submit">Enviar</button>
    {% endform %}
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form[action="/account"]');
      const nifInput = document.getElementById('customer_nif');
      const noteInput = document.getElementById('customer_note');
      
      form.addEventListener('submit', function() {
        // Only add NIF to customer notes
        noteInput.value = `NIF: ${nifInput.value}`;
      });
    });
  </script>
</div>

