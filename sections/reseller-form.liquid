<div class="reseller-form">
  <style>
    .reseller-form {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .reseller-form__title {
      color: #FF6600;
      text-align: center;
      margin-bottom: 10px;
      font-size: 24px;
    }
    
    .reseller-form__subtitle {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }
    
    .reseller-form__input-wrapper {
      margin-bottom: 20px;
      position: relative;
    }

    
    .reseller-form__required {
      color: #FF6600;
      margin-right: 5px;
    }
    
    .reseller-form__input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }
    
    .reseller-form__input:focus {
      outline: none;
      border-color: #FF6600;
    }
    
    .reseller-form__checkbox-group {
      margin-top: 5px;
    }
    
    .reseller-form__checkbox-label {
      display: block;
      margin-bottom: 10px;
      cursor: pointer;
    }
    
    .reseller-form__checkbox {
      margin-right: 10px;
    }
    
    .reseller-form__submit {
      background-color: #FF6600;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      cursor: pointer;
      width: 100%;
      margin-top: 20px;
      transition: background-color 0.3s ease;
    }
    
    .reseller-form__submit:hover {
      background-color: #e65c00;
    }
    
    .reseller-form__submit:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    
    .reseller-form__error {
      color: red;
      font-size: 14px;
      margin-top: 5px;
      display: none;
    }
    
    .reseller-form__success {
      color: green;
      text-align: center;
      margin-top: 20px;
      display: none;
    }
  </style>

  <div class="reseller-form__container">
    <h1 class="reseller-form__title">Formulário de Revendedor</h1>
    <p class="reseller-form__subtitle">Preencher dados abaixo</p>
  
    {% form 'contact' %}
      {% if form.errors %}
        <div class="reseller-form__error" style="display: block;">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}
      
      {% if form.posted_successfully? %}
        <div class="reseller-form__success" style="display: block;">
          <p>Formulário enviado com sucesso!</p>
          <p>Receberá um email de confirmação nos próximos minutos.</p>
        </div>
      {% endif %}
      
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-first-name">*Nome</label>
        <input type="text" class="reseller-form__input" id="ContactForm-first-name" name="contact[first_name]" placeholder="*Nome" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-last-name">*Apelido</label>
        <input type="text" class="reseller-form__input" id="ContactForm-last-name" name="contact[last_name]" placeholder="*Apelido" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-company">*Empresa</label>
        <input type="text" class="reseller-form__input" id="ContactForm-company" name="contact[company]" placeholder="*Empresa" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-nif">*Número de Identificação Fiscal</label>
        <input type="text" class="reseller-form__input" id="ContactForm-nif" name="contact[nif]" placeholder="*Número de Identificação Fiscal" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-city">*Localidade</label>
        <input type="text" class="reseller-form__input" id="ContactForm-city" name="contact[city]" placeholder="*Localidade" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-email">*Email</label>
        <input type="email" class="reseller-form__input" id="ContactForm-email" name="contact[email]" placeholder="*Email" required>
      </div>
      
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-phone">*Telefone</label>
        <input type="tel" class="reseller-form__input" id="ContactForm-phone" name="contact[phone]" placeholder="*Telefone" required>
      </div>
  
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label">*Actividade da sua Empresa</label>
        <div class="reseller-form__checkbox-group">
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="contact[activities][]" value="Centro Auto">
            Centro Auto
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="contact[activities][]" value="Posto de Abastecimento">
            Posto de Abastecimento
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="contact[activities][]" value="Casa de Peças e Acessórios">
            Casa de Peças e Acessórios
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="contact[activities][]" value="Centro de Lavagem">
            Centro de Lavagem
          </label>
          <label class="reseller-form__checkbox-label m-0">
            <input type="checkbox" name="contact[activities][]" value="Outros">
            Outros
          </label>
        </div>
      </div>
      
      <div class="reseller-form__input-wrapper">
        <label class="reseller-form__label sr-only" for="ContactForm-message">Mensagem Adicional</label>
        <textarea class="reseller-form__input" id="ContactForm-message" name="contact[message]" placeholder="Mensagem Adicional" rows="4"></textarea>
      </div>
      
      <input type="hidden" name="contact[form_type]" value="reseller_form">
      
      <button type="submit" class="reseller-form__submit">Enviar</button>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Reseller Form",
  "settings": [],
  "presets": [
    {
      "name": "Reseller Form",
      "category": "Forms"
    }
  ]
}
{% endschema %}
