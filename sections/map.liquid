            "label": "Padding-top",
            "min": 0,
            "max": 80,
            "step": 4,
            "default": 20
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding-bottom",
            "min": 0,
            "max": 80,
            "step": 4,
            "default": 20
        },
        {
            "type": "header",
            "content": "Contact information"
        },
        {
            "type": "inline_richtext",
            "id": "contacts_heading",
            "label": "'Contacts' heading"
        },
        {
            "type": "text",
            "id": "email",
            "label": "Email"
        },
        {
            "type": "text",
            "id": "phone_number",
            "label": "Phone Number"
        },
        {
            "type": "richtext",
            "id": "address",
            "label": "Address"
        },
        {
            "type": "richtext",
            "id": "schedule_1",
            "label": "Schedule 1"
        },
        {
            "type": "richtext",
            "id": "schedule_2",
            "label": "Schedule 2"
        },
        {
            "type": "header",
            "content": "Map"
        },
        {
            "type": "liquid",
            "id": "map_iframe",
            "label": "Map iframe"
        }
    ],
    "blocks": [],
    "presets": [
        {
            "name": "Map"
        }
    ]
}
{% endschema %}